
main = #28363d
orange = #ff8207
colorHov = #c76906


.head{
    height: 100vh;
    position: relative;
    text-align: center;
    text-transform: uppercase;
    background: url(../../images/head/head/bg/head-bg.jpg) center center no-repeat;
    background-size: cover;

    &__container{
        max-width: 1400px;
        margin: auto;
        height: 100%;
        display: flex;
        justify-content: space-between;
    }
}

.header{
    width: 100%;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 1;
    height: 80px;
    background: main;
    color: #fff;
    padding: 0 4vh;
    
    &_fixed{
        .header__btn{
            display: block;
        }
        .header__phone{
            display: none;
        }
    }
    &_map{
        opacity: .8;
        .header__btn{
            display: block;
        }
        .header__phone{
            display: none;
        }
    }

    &__phone{
        width: 230px;
        height: 100%;
        font-size: 24px;
        color: orange;
        font-weight: 600;
        display: flex;
        flex-direction: column;
        justify-content: space-around;
        margin: auto;
        padding: 5px 0;
    }
    &__phone-link{
        line-height: 1;
        white-space: nowrap;
        color: orange;
    }
    &__btn{
        text-align: center;
        text-transform: uppercase !important;
        display: none;
        margin: auto;
        border: 2px solid orange;
        border-radius: 10px;
        margin-left: 10px;
        height: 40px;
        width: 200px;

        &-link{
            // display: none;
            padding: 8px;
            font-size: 16px;
            line-height: 36px;
            color: orange;
            white-space: nowrap;
            width: auto;
            height: auto;
        }
    }
}
.logo{
    width: 230px;
    text-align: left;
    display: flex;
    margin: auto;
}
.nav{
    &__list{
        width: 940px;
        display: flex;
        justify-content: space-between;
        height: 100%;
        margin: auto;
        padding: 0 10px;
    }
    &__item{
        height: 100%;
        display: block;
        border-bottom: solid 4px transparent;
        transition: .2s;
        cursor: pointer;
        display: flex;
        margin: auto;
        &:hover{
            border-bottom:  solid 4px orange;
        }
        &.active{
            background: #1e292f;
            border-bottom:  solid 4px orange;
            .nav__item-link{
                color: #6b848c;
            }
        }
        &-link{
            text-transform: uppercase;
            color: #fff;
            white-space: nowrap;
            padding: 0 10px;
            margin: auto;
            height: 100%;
            display: flex;
            align-items: center;
        }
    }
}


.hamburger{
    position: relative;
    display: none;
    flex-direction: column;
    justify-content: space-between;
    width: 40px;
    height: 40px;
    background-position: center;
    background-size: cover;
    transition: .5s;
    margin: auto 0;
    
    &:hover{
        cursor: pointer;
    }
    &__top,
    &__middle,
    &__bottom{
        transition:all .3s;
    }
    &__middle{
        transform: rotate(180deg);
        position: relative;
    }
    &-nav{
        display: flex;
        flex-direction: column;
        position: fixed;
        top: 0;
        left: 100%;
        width: 100vw;
        height: 0;
        background: rgba(40,54,61,0.97);
        z-index: 9;
        transition: .5s;
    }
    &__btn{
        text-align: center;
        text-transform: uppercase !important;
        display: none;
        margin: auto;
        border: 2px solid orange;
        border-radius: 10px;
        margin-left: 10px;
        height: 40px;
        width: 200px;

        &-link{
            border: 2px solid orange;
            border-radius: 10px;
            padding: 2px 10px;
            font-size: 16px;
            color: orange;
            white-space: nowrap;
            width: auto;
            height: 33px;
        }

    }
    &_active{
        position: fixed;
        top: 20px;
        right: 4vh;
        z-index: 9;
        animation: 0.5s hamburger-hide;
        animation-fill-mode: both;
        .hamburger__top{
            transform: rotate(-45deg);
            transform-origin: 43px 20px;
            width: 55px;
            height: 10px;
        }
        .hamburger__middle {
            height: 0;
    
        }
        .hamburger__bottom {
            transform: rotate(45deg);
            transform-origin: 42px -11px;
            width: 55px;
            height: 10px;
        }
        .hamburger-nav{
            height: 100vh;
            left: 0;
        }
    }
}



.slider{
    width: 100%;
    position: absolute;
    top: 0;
    padding: 150px 0 140px;
    height:100%;
    left: 50%;
    transform: translateX(-50%);

    &-item{
        position: absolute;
        top: 0;
        left: 0;
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
        align-items: center;
        visibility: hidden;
        transition: 0.8s;
        opacity: 0;
        &_active{
            visibility: visible;
            opacity: 1;
        }
    }
    &__title{
        font-size: 48px;
        font-weight: 600;
        line-height: 1.2;
    }
    &__line{
        fill:#28363d;
        width: 100%;
        height: 10px;
        margin: 30px 0;
    }
    &__text{
        font-size: 24px;
    }
    &__button{
        font-size: 32px;
        font-weight: 600;
        border-radius: 10px;
        background-color: rgb(255, 130, 7);
        width: 400px;
        height: 80px;
        border: none;
        color: #fff;
        text-transform: uppercase;
        margin: auto;
        transition: .2s;
        &:hover{
            background-color: #c76906;
        }
    }
}
.head-content{
    height: 100%;
}
.btns{
    cursor: pointer;
}
.btn-prev,
.btn-next{
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    fill:#ff9526;
    transition: .2s;
    &:hover{
        fill: colorHov;
    }
}
.btn-prev{
    left: 60px;
}
.btn-next{
    right: 60px;
}
.btn__down{
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    bottom: 20px;
}
.head-nav{
    width: 140px;
    display: flex;
    justify-content: space-between;
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    bottom: 100px;

    &__circle{
        width: 18px;
        height: 18px;
        border-radius: 50%;
        background: main;
        &_active{
            background: orange;
            height: 18px;
        }
    }
}

 /////////////// adaptive 

 @media screen and (max-height: 768px){
    .header {
        height: 60px;
    }
    .header__btn{
        margin: auto;
    }
    .slider {
        padding: 90px 0 120px;

        &__line {
            margin: auto 0;
        }
        &__text {
            font-size: 14px;
            padding-bottom: 20px;
        }
        &__title {
            margin-top: auto;
            font-size: 38px;
        }
        &__button {
            height: auto;
            width: auto;
            padding: 15px;
            font-size: 16px;
        }
    }
}
@media screen and (max-height: 620px){
    .header__phone-link {
        font-size: 16px;
    }
    .hamburger_active{
        top: 10px;
    }
    .slider__line {
        margin: auto 0;
    }
    .slider__text {
        font-size: 14px;
    }
    .slider__title {
        font-size: 28px;
    }
    .btn-prev,
    .btn-next{
        height: 50px;
    }
    .btn__down{
        height: 40px;
    }
    .head-nav__circle,
    .head-nav__circle_active {
        width: 15px;
        height: 15px;
    }
    .head-nav {
        width: 100px;
        bottom: 80px;
    }
}

@media screen and (max-width: 1366px) {
    .head{
        font-size: 14px;
    }
    .header{
        height: 80px;

        &__phone-link{
            font-size: 18px;
        }
    }
}
@media screen and (max-width: 1024px){
    .head-content.content {
        height: 100%;
        width: 75%;
    }
    .header{
        padding: 0 20px 0 0;
    }
    .header__btn{
        display: none;
    }
    .btn-prev {
        left: 7vw;
    }
    .btn-next {
        right: 35px;
    }
    .header__phone,
    .header .logo{
        display: none;
    }
}
@media screen and (max-width: 768px) {
    .header {
        height: 60px;
        padding: 0 4vh;
    }
    .header_fixed .header__btn{
        display: none;
    }
    .hamburger_active{
        top: 10px;
    }
    .btn-prev,
    .btn-next {
        width: 20px;
    }
    .slider__button {
        width: 80%;
        font-size: 18px;
    }
    .nav__list{
        display: none;
    }
    
    .nav__item{
        height: 10%;
    }
    .hamburger{
        display: flex;
    }
    .header .logo {
        margin: auto 0;
        display: block;
    }
}
@media screen and (max-width: 480px) {
    .head-content.content {
        width: 70%;
    }
    .btn-next {
        right: 30px;
    }
}




