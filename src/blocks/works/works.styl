
main = #28363d;
orange = #ff8207;

.works{
    position: relative;
    text-align: center;
    background: url(../../images/works/works/bg/works-bg.png) center no-repeat;
    background-size: cover;
    height: 100vh;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    padding: 100px 20px 15px;

    &__article-line{
        margin: 12px 0 0;
    }
    &__text{
        font-size: 18px;
        color: #8198a0;
        margin-bottom: auto;
        padding-bottom: 20px;
    }
    &-container__wrap{
        width: 100%;
        height: 100%;
        display: flex;
        flex-flow: row wrap;
        justify-content: flex-start;
        align-content: space-between;
        margin-right: -1.3%;
    }
    &__article {
        background-color: rgb(40, 54, 61);
        max-width: 32%;
        height: 48%;
        display: block;
        margin-right: 1.3%;
        transition: .2s;
        position: relative;
        display: flex;
        flex-direction: column;
        justify-content: flex-end;
        background: url(../../images/works/works/work.jpg) center no-repeat;
        background-size: cover;

        &:hover{
            .works__article-info{
            opacity: .8;
            animation: anim .7s cubic-bezier(.92, .30, 1, 1);
            animation-fill-mode: forwards;
            }
        }
        
        @keyframes anim{
            from{
                transform: translateY(-150%) scale(.3)
                opacity: 0;
            }
            60%{
                transform: translateY(0) scale(1)
                opacity: 0.8;
            }
            70%{
                transform: translateY(-20%) scale(.8)
            }
            84%{
                transform: translateY(0%) scale(1)
            }
            95%{
                transform: translateY(-10%) scale(.9)
            }
            100%{
                transform: translateY(0) scale(1) 
            }
        }

        &-info{
            background-color: rgb(255, 255, 255);
            min-height: 30%;
            padding: 20px 0 5px 10%;
            text-align: left;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            opacity: 0;
            transition: .2s;
        }
        &-title{
            font-size: 18px;
            text-align: left;
            color: main;
            font-weight: 600;
        }
        &-text{
            color: #7b7b7b;
            &:after{
                content: "";
                width: 310px;
                display: inline-block;
            }
        }
    }
}
.container{
    max-width: 1440px;
    margin:0 auto;
    height: 75%;
    display: flex;
    justify-content: center;
}
.content{
    position: relative;
    width: 780px;
    margin:0 auto;
    text-align: center;
}
.line{
    fill: orange;
    margin: 26px 0 14px;
}



////////////// adaptive 

@media screen and (max-height: 992px){
    .title{
        line-height: 1.2;
    }
    .line{
        margin: auto 0;
    }
    .works{
        &__line{
            margin: auto ;
        }
        &__text{
            font-size: 16px;
        }
        &__article{
            &-title{
                font-size: 16px;
            }
            &-line {
                margin: 5px 0 0;
            }
            &-text{
                font-size: 14px;
            }
        }
    }
}

@media screen and (max-height: 520px){
    //// oul carousel
    .works{
        padding-top:80px;
        &__article{
            margin: auto;
            height: 45vh;
        }
    }
}

 @media screen and (max-width: 1366px) {
    .container{
        width: 97%;
    }
}
@media screen and (max-width: 1024px){
    .content {
        width: 80%;
    }
}
@media screen and (max-width: 768px) {
    .works{
        padding-top: 80px;
        &__title{
            font-size: 28px;
            font-weight: 600;
        }
        &__article {
            height: 50vh;
            width: 100%;
            max-width: 100%;
            margin: auto;
        }
    }
    
    //// oul carousel
}
@media screen and (max-width: 480px) {
    .works__article {
        height: 40vh;
    }
    //// oul carousel
}