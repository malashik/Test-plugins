
main = #28363d
orange = #ff8207
colorHov = #c76906


.head{
    height: 100vh;
    position: relative;
    text-align: center;
    text-transform: uppercase;
    background: url(../../images/bg/head-bg.jpg) center center no-repeat;
    background-size: cover;
}
.head__container{
    max-width: 1400px;
    margin: auto;
    height: 100%;
    display: flex;
    
}
.header{
    height: 120px;
    background: main;
    color: #fff;
    padding: 0 4vh;
    
}
.logo{
    width: 230px;
    padding: 35px 0;
    text-align: left;
}
.nav{
}
.nav__list{
    width: 940px;
    display: flex;
    justify-content: space-between;
    height: 100%;
    margin: auto
}
.nav__item{
    height: 100%;
    display: block;
    border-bottom: solid 4px transparent;
    transition: .2s;
    line-height: 120px;
    margin: 0 auto;
    padding: 0 10px;
    cursor: pointer;
    &:hover{
        border-bottom:  solid 4px orange;
    }
    &_active{
        background: #1e292f;
        color: #6b848c;
        border-bottom:  solid 4px orange;
    }
}
.nav__item-link{
    display: block;
    height: 100%;
}
.header__phone{
    width: 230px;
    font-size: 24px;
    color: orange;
    padding: 30px 0 30px 10px;
    font-weight: 600;
    p{
        margin: 0 0 16px;
        line-height: 1;
        white-space: nowrap;
    }
}
.slider{
    position: relative;
    height:100%;
    min-height:768px;
    max-height: 1080px; 
}
.container{
    width: 940px;
    margin: auto;
    height: 100%;
}
.slide{
    padding-top: 145px;
    position: relative;
    height: 100%;
}
.slider__title{
    font-size: 48px;
    font-weight: 600;
}
.slider__line{
    padding: 50px 0;
    fill:#28363d;
    width: 100%;
}
.slider__text{
    font-size: 24px;
}
.slider__button{
    font-size: 32px;
    font-weight: 600;
    border-radius: 10px;
    background-color: rgb(255, 130, 7);
    width: 400px;
    height: 80px;
    border: none;
    color: #fff;
    text-transform: uppercase;
    margin-top: 169px;
}
.btns{
    cursor: pointer;
}
.btn__left,
.btn__right{
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    fill:#ff9526;
    transition: .2s;
    &:hover{
        fill: colorHov;
    }
}
.btn__left{
    left: 150px;
}
.btn__right{
    right: 150px;
}
.btn__down{
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    bottom: 45px;
}
.head-nav{
    width: 140px;
    display: flex;
    justify-content: space-between;
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    bottom: 165px;
}
.head-nav__circle{
    width: 18px;
    height: 18px;
    border-radius: 50%;
    background: main;
    &_active{
        background: orange;
    }
}