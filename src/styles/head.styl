
main = #28363d
orange = #ff8207


.head{
    height: auto;
    position: relative;
    text-align: center;
    text-transform: uppercase;
    background: url(../../images/bg/head-bg.jpg) center no-repeat;
    background-size: cover;
}
.head__content{
    width: 1400px;
    margin: auto;
    height: 100%;
    display: flex;
    
}
.header{
    height: 120px;
    background: main;
    height: 120px;
    color: #fff;
}
.logo{
    width: 230px;
    padding: 35px 0;
    text-align: left;
}
.nav{
    width: 940px;
}
.nav__list{
    width: 100%;
    display: flex;
    justify-content: space-between;
    height: 100%;
}
.nav__item{
    width: 140px;
    height: 100%;
    border-bottom: solid 4px transparent;
    transition: .2s;
    line-height: 120px;
    &:hover{
        border-bottom:  solid 4px orange;
    }
    &_active{
        background: #1e292f;
        color: #6b848c;
        border-bottom:  solid 4px orange;
    }
    
}
.header__phone{
    width: 230px;
    font-size: 24px;
    color: orange;
    padding: 30px 0;
    font-weight: 600;
    p{
        margin: 0 0 16px;
        line-height: 1;
    }
}
.slider{
    position: relative;
    height:100vh;
    min-height:768px;
    max-height: 1080px; 
}
.container{
    width: 940px;
    margin: auto;
    height: 100%;
}
.slide{
    padding-top: 145px;
    position: relative;
    height: 100%;
}
.slider__title{
    font-size: 48px;
    font-weight: 600;
}
.slider__line{
    padding: 50px 0;
}
.slider__text{
    font-size: 24px;
}
.slider__button{
    font-size: 32px;
    font-weight: 600;
    border-radius: 10px;
    background-color: rgb(255, 130, 7);
    width: 400px;
    height: 80px;
    border: none;
    color: #fff;
    text-transform: uppercase;
    margin-top: 169px;
}
