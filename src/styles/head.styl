.btns{
    cursor: pointer;
}
.btn__left,
.btn__right{
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
}
.btn__left{
    left: 350px;
}
.btn__right{
    right: 350px;
}
.btn__down{
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    bottom: 45px;
}
.head-nav{
    width: 140px;
    display: flex;
    justify-content: space-between;
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    bottom: 165px;
}
.head-nav__circle{
    width: 18px;
    height: 18px;
    border-radius: 50%;
    background: main;
    &_active{
        background: orange;
    }
}