
main = #28363d
orange = #ff8207
colorHov = #c76906


.head{
    height: 100vh;
    position: relative;
    text-align: center;
    text-transform: uppercase;
    background: url(../../images/bg/head-bg.jpg) center center no-repeat;
    background-size: cover;
}
.head__container{
    max-width: 1400px;
    margin: auto;
    height: 100%;
    display: flex;
    justify-content: space-between;
}
.header{
    width: 100%;
    position: relative;
    z-index: 1;
    height: 10vh;
    background: main;
    color: #fff;
    padding: 0 4vh;
}
.logo{
    width: 230px;
    /* padding: 35px 0; */
    text-align: left;
    display: flex;
    margin: auto;
}

.nav__list{
    width: 940px;
    display: flex;
    justify-content: space-between;
    height: 100%;
    margin: auto;
    padding: 0 10px;
}
.nav__item{
    height: 100%;
    display: block;
    border-bottom: solid 4px transparent;
    transition: .2s;
    cursor: pointer;
    display: flex;
    margin: auto;
    &:hover{
        border-bottom:  solid 4px orange;
    }
    &.active{
        background: #1e292f;
        border-bottom:  solid 4px orange;
        .nav__item-link{
            color: #6b848c;
        }
    }
}
.nav__item-link{
    color: #fff;
    white-space: nowrap;
    padding: 0 10px;
    margin: auto;
    height: 100%;
    display: flex;
    align-items: center;
}

.header__phone{
    width: 230px;
    height: 100%;
    font-size: 24px;
    color: orange;
    font-weight: 600;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    margin: auto;
    padding: 5px 0;
}
.header__phone-link{
    line-height: 1;
    white-space: nowrap;
    color: orange;
}
.hamburger{
    position: relative;
    display: none;
    flex-direction: column;
    justify-content: space-between;
    width: 40px;
    height: 40px;
    background-position: center;
    background-size: cover;
    &:hover{
        cursor: pointer;
        
    } 
    transition: .5s;
    margin: auto 0;
}
.hamburger__top,
.hamburger__middle,
.hamburger__bottom{
    transition:all .3s;
}
.hamburger__middle{
    transform: rotate(180deg);
    position: relative;

}
.hamburger-nav{
    // visibility: hidden;
    display: flex;
    flex-direction: column;
    position: fixed;
    top: 0;
    left: 100%;
    width: 100vw;
    height: 0;
    background: rgba(40,54,61,0.9);
    z-index: 9;
    transition: .5s;
}
.hamburger_active{
    position: fixed;
    top: 10px;
    right: 4vh;
    z-index: 9;
    // .full-screen{
    //     z-index: -1;
    //     width: 100vw;
    //     height: 100vh;
    //     display: flex;
    //     // left: 0;
    //     animation: 0.5s slide;
    //     animation-fill-mode: both;
        
    // } 
    animation: 0.5s hamburger-hide;
    animation-fill-mode: both;
    .hamburger__top{
        transform: rotate(-45deg);
        transform-origin: 43px 20px;
        width: 55px;
        height: 10px;
    }
    .hamburger__middle {
        height: 0;

    }
    .hamburger__bottom {
        transform: rotate(45deg);
        transform-origin: 42px -11px;
        width: 55px;
        height: 10px;
    }
    .hamburger-nav{
        height: 100vh;
        // visibility: visible;
        left: 0;
    }
}



.slider{
    width: 100%;
    position: absolute;
    top: 0;
    padding: 150px 0 140px;
    height:100%;
    left: 50%;
    transform: translateX(-50%);
}
.head-content{
    height: 100%;
}
.slider-item{
    position: absolute;
    top: 0;
    left: 0;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
    visibility: hidden;
    transition: 0.8s;
    opacity: 0;
    &_active{
        visibility: visible;
        opacity: 1;
    }
}
.slider__title{
    font-size: 48px;
    font-weight: 600;
    line-height: 1.2;
}
.slider__line{
    fill:#28363d;
    width: 100%;
    height: 10px;
    margin: 30px 0;
}
.slider__text{
    font-size: 24px;
}
.slider__button{
    font-size: 32px;
    font-weight: 600;
    border-radius: 10px;
    background-color: rgb(255, 130, 7);
    width: 400px;
    height: 80px;
    border: none;
    color: #fff;
    text-transform: uppercase;
    margin: auto;
    transition: .2s;
    &:hover{
        background-color: #c76906;
    }
}
.btns{
    cursor: pointer;
}
.btn-prev,
.btn-next{
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    fill:#ff9526;
    transition: .2s;
    &:hover{
        fill: colorHov;
    }
}
.btn-prev{
    left: 60px;
}
.btn-next{
    right: 60px;
}
.btn__down{
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    bottom: 20px;
}
.head-nav{
    width: 140px;
    display: flex;
    justify-content: space-between;
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    bottom: 100px;
}
.head-nav__circle{
    width: 18px;
    height: 18px;
    border-radius: 50%;
    background: main;
    &_active{
        background: orange;
        height: 18px;
    }
}

 /////////////// adaptive 

@media screen and (max-width: 1366px) {
    .head{
        font-size: 14px;
    }
    .header{
        height: 80px;
    }
    
     .header__phone-link{
        font-size: 18px;
    } 
}
@media screen and (max-width: 1024px){
    .head-content.content {
        height: 100%;
        width: 75%;
    }
    .btn-prev {
        left: 7vw;
    }
    .btn-next {
        right: 35px;
    }
    .header__phone{
        display: none;
    }
}
@media screen and (max-width: 768px) {
    .btn-prev,
    .btn-next {
        width: 20px;
    }
    .slider__button {
        width: 80%;
        font-size: 18px;
    }
    .nav__list{
        display: none;
    }
    
    .nav__item{
        height: 10%;
    }
    .hamburger{
        display: flex;
    }
    .logo {
        margin: auto 0;
    }
}
@media screen and (max-width: 480px) {
    .head-content.content {
        width: 70%;
    }

    .btn-next {
        right: 30px;
    }

}




@media screen and (max-height: 768px){
    .slider {
        padding: 90px 0 120px;
    }

    .slider__line {
        margin: auto 0;
    }
    .slider__text {
        font-size: 14px;
        padding-bottom: 20px;
    }
    .slider__title {
        margin-top: auto;
        font-size: 38px;
    }
    .slider__button {
        height: auto;
        width: auto;
        padding: 15px;
        font-size: 16px;
    }


}
