main = #28363d
orange = #ff8207

*{
	-webkit-box-sizing: border-box;
	-moz-box-sizing: border-box;
	box-sizing: border-box;
}
html{
	height: 100%;
	width: 100%;
	
}
body{
	font-family: 'roboto', Arial, sans-serif;
	width: 100%;
	height: 100%;
	position: relative;
	font-size: 16px;
	line-height: 1.42;
	color: #28363d; 
	margin: 0 auto;
	background: #fff;
	-webkit-box-sizing: border-box;
	-moz-box-sizing: border-box;
	box-sizing: border-box;
}

.wrapper{                   
	width: 100%;
	min-height: 100%;
	position: relative;
	margin: 0 auto;
	overflow: hidden;
}

ul{
	margin: 0;
	padding: 0;
}
a{
	text-decoration: none;
}
ul li{
	list-style: none;
}

img{
	display: block;
	max-width: 100%;
}

h1,
h2,
h3,
h4,
h5,
h6{
	margin: 0;
	font-weight: normal;

}
.title{
	position: relative;
	text-align: center;
	text-transform: uppercase;
	line-height: 0.75;
	font-size: 48px;
}

.clearfix:after,
.clearfix:before{
	width: 100%;
	content: "";
	display: block;
	clear:both;
}
.fixed-nav{
	position: fixed;
	/* top: 50%;
	transform: translateY(-50%); */
	right: 10px;
	height: 100%;
	width: 18px;
	z-index: 1;
	display: flex;
	flex-direction: column;
	justify-content: center;

}
.fixed-nav__circle{
    width: 18px;
    height: 18px;
    border-radius: 50%;
	background: main;
	margin-bottom: 9px;
    &_active{
        background: orange;
    }
}