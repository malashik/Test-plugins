main = #28363d
orange = #ff8207

*{
	-webkit-box-sizing: border-box;
	-moz-box-sizing: border-box;
	box-sizing: border-box;
}
html{
	height: 100%;
	width: 100%;
	
}
body{
	font-family: 'roboto', Arial, sans-serif;
	width: 100%;
	height: 100%;
	position: relative;
	font-size: 16px;
	line-height: 1.42;
	color: #28363d; 
	margin: 0 auto;
	background: #fff;
	-webkit-box-sizing: border-box;
	-moz-box-sizing: border-box;
	box-sizing: border-box;
}

.wrapper{
	width: 100%;
	min-height: 100%;
	position: relative;
	margin: 0 auto;
}

ul{
	margin: 0;
	padding: 0;
}
a{
	text-decoration: none;
}
ul li{
	list-style: none;
}

img{
	display: block;
	max-width: 100%;
}

h1,
h2,
h3,
h4,
h5,
h6{
	margin: 0;
	font-weight: normal;

}
.title{
	position: relative;
	text-align: center;
	text-transform: uppercase;
	line-height: 0.75;
	font-size: 48px;
}

.clearfix:after,
.clearfix:before{
	width: 100%;
	content: "";
	display: block;
	clear:both;
}
.fixed-nav{
	position: fixed;
	/* top: 50%;
	transform: translateY(-50%); */
	right: 10px;
	height: 100%;
	width: 18px;
	z-index: 1;
	display: flex;
	flex-direction: column;
	justify-content: center;

}
.fixed-nav__circle{
    width: 18px;
    height: 18px;
    border-radius: 50%;
	background: main;
	margin-bottom: 9px;
    &.active{
        background: orange;
    }
}
.fixed-nav__link{
	display: block;
	height: 100%;
	cursor: pointer;
}

.modal-window{
	display: none;
	position: fixed;
	width: 100%;
	height: 100%;
	top: 0;
	left: 0;
	z-index: 99999999999999999999;
	background: rgba(0,0,0, .8);
	color: main;

	&__text{
		width: 50vw;
		height: 20vh;
		background: #fff;
		margin: auto;
		position: relative;
		text-align: center;
		line-height: 20vh;
	}
	&__close{
		cursor: pointer;
		width: 20px;
		height: 20px;
		border: solid 2px #000;
		border-radius: 50%;
		text-align: center;
		line-height: 17px;
		position: absolute;
		right: 0;
		top: 0;
	}
}
