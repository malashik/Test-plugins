main = #28363d;
orange = #ff8207;
.advantages{
    padding: 100px 20px 15px;
    position: relative;
    text-align: center;
    height: 100vh;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    
    &__text{
        font-size: 18px;
        color: #8198a0;
    }
    &__list{
        display: flex;
        flex-flow row wrap
    }
    &__item{
        height: 50%;
        width: 25%;
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
        padding: 20px 15px 0;

        &-title{
            font-size: 16px;
            font-weight: 600;
            line-height: 1.42;
        }
        &-text{
            margin-bottom: auto;
            color:#8198a0;
        }
    }
    &__svg{
        margin: auto;
        fill: orange;
    }
}

 /////////////// adaptive 
 @media screen and (max-height: 520px){
    //// oul carousel

        .advantages__item{
            margin: auto;
            height: 45vh
        }
}

 @media screen and (max-width: 1366px) {
    .container{
        width: 97%;
    }
}
@media screen and (max-width: 1024px){
    .advantages{
        &__title{
            font-size: 28px;
            line-height: 1.2;
            font-weight: 600;
        }
        &__line{
            margin: auto;
        }
        &__text{
            font-size: 16px;
        }
        &__item-text{
            font-size: 14px;
        }
    }
}

@media screen and (max-width: 768px) {
    //// oul carousel
    .advantages{
        padding-top: 80px;
        
        &__item {
            height: 50vh;
            width: 100%;
            padding: 20px 15px;
        }
    }
}
