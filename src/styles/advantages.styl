main = #28363d;
orange = #ff8207;
.advantages{
    padding: 5vh;
    position: relative;
    text-align: center;
    height: 100vh;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}
.advantages__text{
    font-size: 18px;
    color: #8198a0;
}
.advantages__list{
    display: flex;
    flex-flow row wrap
}
.advantages__item{
    height: 50%;
    width: 25%;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    padding: 20px 15px 0;
}
.advantages__svg{
    margin: auto;
    fill: orange;
}
.advantages__item-title{
    font-size: 16px;
    font-weight: 600;
    line-height: 1.42;
}
.advantages__item-text{
    margin-bottom: auto;
    color:#8198a0;
}