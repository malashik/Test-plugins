main = #28363d;
orange = #ff8207;
.feedback{
    padding: 5vh 20px 0;
    position: relative;
    text-align: center;
    height: 100vh;
    max-width: 1440px;
    position: relative;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
}

.feedback__text{
    font-size: 18px;
    color: #8198a0;
}
.feedback__container{
    width: 940px;
    margin: 0 auto;
    display: flex;
    padding-top: 55px;
    text-align: left;
    
}
.feedback__left{
    width: 42%;
}
.feedback__left-info{
    font-size: 24px;
    color: orange;
    text-transform: uppercase;
    font-weight: 600;
    margin-bottom: 30px;
    p{
        color: #999999;
        font-size: 18px;
        text-transform: none
        font-weight: 400;
        margin: 15px 0 0;
    }
}

.feedback__right{
    width: 58%;
}
.feedback__right-item{
    width: 100%;
    margin-bottom: 20px;
    display: block;
    .input,
    textarea{
        border: none;
        border-bottom: 1px solid #e5e5e5;
        width: 100%;
    }
}
.feedback__right-title{
    font-size: 24px;
    font-weight: 600;
    margin-bottom: 5px;
}
textarea{
    resize:none;
    width: 100%;
    height: 100px;
}
.add-photo,
.feedback-photo{
    display: inline-block;
    vertical-align: middle;
    margin-right: 25px;
    font-weight: 600;
    font-size: 24px;
}
.add-photo{
    fill: orange
}
.img-password{
    margin-right: 185px;
    width: 137px;
    height: 41px;
}
.feedback__right-item_psw{
    display: flex;
    justify-content: space-between
    align-items: center;
}
.input-btn {
    border-radius: 10px;
    background-color: rgb(255, 130, 7);
    width: 220px;
    height: 60px;
    border: none;
    text-transform: uppercase;
    font-size: 18px;
    color: #fff;
}
.arrow-top{
    position: absolute;
    right: 20px;
    bottom: 10px;
}

