
main = #28363d;
orange = #ff8207;

.works{
    position: relative;
    text-align: center;
    background: url(../../images/bg/works-bg.png) center no-repeat;
    background-size: cover;
    height: 100vh;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    padding: 5vh 0;
}
.content{
    width: 780px;
    margin:0 auto;
    text-align: center;
}
.line{
    fill: orange;
    margin: 26px 0 14px;
}
.works__article-line{
    margin: 12px 0 0;
    
}



.works__text{
    font-size: 18px;
    color: #8198a0;
    margin-bottom: 60px;
}

.works-container{
    max-width: 1465px;
    margin:0 auto;
    height: 75%;
    display: flex;
    justify-content: center;
    padding: 0 20px;
    
}
.works-container__wrap{
    width: 100%;
    height: 100%;
    display: flex;
    flex-flow: row wrap;
    justify-content: flex-start;
    align-content: space-between;
    margin-right: -1.3%;
    /* &:last-child:after{
        width: 0;
        margin: auto;
        display: block;
        content: "";
        display: flex;
    } */
}

.works__article {
    background-color: rgb(40, 54, 61);
    max-width: 32%;
    height: 48%;
    display: block;
    margin-right: 1.3%;
    transition: .2s;
    position: relative;
    display: flex;
    flex-direction: column;
    background: url(../../images/work.jpg) center no-repeat;
    background-size: cover;

    &:hover{
        .works__article-info{
        opacity: 1;
        }
    }
    
}
.works__article-img{
    height: 0%;
    margin: auto;
}
.works__article-info{
    background-color: rgb(255, 255, 255);
    opacity: 0.8;
    min-height: 30%;
    /* position: relative; */
    /* top: -30%; */
    padding: 20px 0 20px 60px;
    text-align: left;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    /* opacity: 0; */
    transition: .2s;
}
.works__article-title{
    font-size: 18px;
    text-align: left;
    color: main
}
.works__article-text{
    color: #7b7b7b;
    &:after{
        content: "";
        width: 310px;
        display: inline-block;
    }
}